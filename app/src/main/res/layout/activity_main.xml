<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:padding="50dp">


    <ImageView
        android:id="@+id/btn_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_judul"
        android:layout_alignBottom="@+id/txt_judul"
        android:src="@drawable/baseline_navigate_before" />

    <TextView
        android:id="@+id/txt_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/judul_lagu"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/main"/>

    <ImageView
        android:id="@+id/icon_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_menu"
        android:layout_alignTop="@+id/txt_judul"
        android:layout_alignBottom="@+id/txt_judul"
        android:layout_alignParentEnd="true"/>


    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:layout_below="@+id/txt_judul"
        android:layout_centerHorizontal="true"
        android:src="@drawable/album_cover"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/album_cover"
        android:src="@drawable/line"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/big_eclipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_cover"
        android:src="@drawable/ellipse_big"
        android:layout_alignStart="@id/line"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"/>

    <ImageView
        android:id="@+id/small_eclipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_cover"
        android:src="@drawable/ellipse_small"
        android:layout_alignTop="@+id/big_eclipse"
        android:layout_alignBottom="@id/big_eclipse"
        android:layout_marginLeft="5dp"/>


    <TextView
        android:id="@+id/txt_artis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/artis"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/orange"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_judul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_artis"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/judul_lagu"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="@color/main"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/button_previous"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_judul2"
        android:src="@drawable/baseline_skip_previous"
        android:layout_marginTop="45dp"
        android:layout_alignStart="@id/txt_judul2"/>

    <ImageView
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_3"
        android:layout_below="@+id/txt_judul2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

    <ImageView
        android:id="@+id/button_play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/__icon__play_"
        android:layout_below="@+id/txt_judul2"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/button_previous"
        android:layout_alignBottom="@+id/button_previous"/>

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_judul2"
        android:src="@drawable/baseline_skip_next"
        android:layout_marginTop="45dp"
        android:layout_alignEnd="@id/txt_judul2"/>

</RelativeLayout>